{
  "name": "electron-covamo",
  "version": "1.0.0",
  "private": true,
  "description": "Yellow document",
  "author": "Daems Kevin",
  "main": "electron/main.cjs",
  "scripts": {
    "prebuild": "node encrypt-env.js",
    "dev": "concurrently \"vite\" \"npm run backend-auto\" \"wait-on http://localhost:5173 && electron .\"",
    "backend-auto": "node scripts/start-backend.js",
    "build:frontend": "vite build",
    "build:backend": "cd backend && pyinstaller --onefile --noconsole --name app app.py",
    "build": "npm run build:backend && npm run build:frontend",
    "electron:build": "npm run build && npx electron-builder --win --x64",
    "electron:build:mac": "npm run build && npx electron-builder --mac"
  },
  "dependencies": {
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "be.jouwbedrijf.covamo",
    "productName": "Covamo Electron",
    "asar": true,
    "publish": null,
    "files": [
      "dist",
      "electron",
      "main.cjs",
      "package.json",
      "!**/*.ts",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "backend/dist/app.exe",
        "to": "backend/app.exe"
      },
      {
        "from": "backend/.env.enc",
        "to": "backend/.env.enc"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
